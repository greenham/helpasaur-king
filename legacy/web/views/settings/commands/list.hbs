<div class="container">
	<nav aria-label="breadcrumb">
	  <ol class="breadcrumb">
	  	<li class="breadcrumb-item"><i class="fas fa-filter"></i></li>
	    <li class="breadcrumb-item"><a href="/settings/commands">All</a></li>
	    <li class="breadcrumb-item"><a href="/settings/commands/def">Definitions</a></li>
	    <li class="breadcrumb-item"><a href="/settings/commands/meme">Memes</a></li>
	    <li class="breadcrumb-item"><a href="/settings/commands/temp">Temporary</a></li>
	    <li class="breadcrumb-item"><a href="/settings/commands/bot">Bot</a></li>
	  </ol>
	</nav>

	<div class="btn-group float-right">
		<a href="/settings/commands/create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Command</a>
	</div>
	<h1>Bot Commands</h1>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Command</th>
				<th width="75%">Response</th>
			</tr>
		</thead>
		<tbody>
			{{#each commands}}
				<tr href="/settings/commands/{{_id}}">
					<td><strong>{{command}}</strong><br>{{#each aliases}}<span class="badge badge-secondary">{{this}}</span>{{/each}}</td>
					<td><a href="/settings/commands/{{_id}}"><span class="d-inline-block text-truncate" style="max-width: 40rem;">{{response}}</span></a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>