{
  "name": "helpasaur-king",
  "version": "1.9.1",
  "repository": "git@github.com:greenham/helpasaur-king.git",
  "scripts": {
    "start": "echo 'Starting backend services...' && pnpm start:backend && echo '\nBackend started! Now run \"pnpm start:web\" in another terminal for the web app.'",
    "start:backend": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "start:web": "cd web && pnpm start",
    "stop": "docker compose down",
    "build": "DOCKER_BUILDKIT=1 docker compose build --force-rm",
    "logs": "docker compose logs -f --tail 1000",
    "boom": "pnpm stop && pnpm build && pnpm start --force-recreate && pnpm logs",
    "version:bump": "bash scripts/bump-version.sh"
  },
  "author": "https://github.com/greenham",
  "license": "MIT",
  "dependencies": {
    "helpa-api-client": "file:./lib/helpa-api-client"
  }
}
