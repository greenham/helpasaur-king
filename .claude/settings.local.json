{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(grep:*)",
      "Bash(gh pr view:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && pnpm format"
          }
        ]
      }
    ]
  }
}
