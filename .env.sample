# Docker Image Configuration
VERSION=1.9.1                                        # Version tag to pull from ghcr.io when using start:ghcr scripts
BUILD_TARGET=dev                                     # Docker build target (dev|prod) - controls which stage is built

# MongoDB Configuration
MONGO_ROOT_USERNAME=root                            # MongoDB root admin username
MONGO_ROOT_PASSWORD=your_mongo_root_password_here   # MongoDB root admin password - CHANGE THIS!
MONGO_EXTERNAL_PORT=27019                           # External port for MongoDB (mapped to 27017 internally)
MONGO_DATABASE_NAME=helpa                           # Name of the application database
MONGO_EXPRESS_USERNAME=admin                        # Username for Mongo Express web UI
MONGO_EXPRESS_PASSWORD=your_mongo_express_password_here  # Password for Mongo Express web UI - CHANGE THIS!

# App Service Port Configuration (external ports mapped to containers)
WEB_PUBLIC_EXTERNAL_PORT=3000                       # React web app port (nginx serves this)
API_SERVER_EXTERNAL_PORT=3001                       # Express API server port
TWITCH_WEBHOOK_LISTENER_PORT=3002                   # Port for receiving Twitch EventSub webhooks
WEBSOCKET_RELAY_SERVER_PORT=3003                    # Socket.io relay hub for inter-service communication

# Health Check Ports
DISCORD_HEALTH_PORT=3010
TWITCH_HEALTH_PORT=3011                             # Health check endpoint for Twitch bot
RACEBOT_HEALTH_PORT=3012                            # Health check endpoint for Race bot
WS_RELAY_HEALTH_PORT=3013                           # Health check endpoint for WebSocket Relay (separate from main WS port)

# Monitoring
UPTIME_KUMA_PORT=3333                               # https://github.com/louislam/uptime-kuma

# API Configuration
API_HOST=https://api.your-domain.com                # Public URL of the API server (used by web app)
API_SECRET_KEY=your_api_secret_key_here             # Secret key for API internal operations - CHANGE THIS!
API_CORS_ORIGINS_WHITELIST=http://localhost:3450,https://your-domain.com  # Comma-separated list of allowed CORS origins

# Twitch Integration
TWITCH_APP_CLIENT_ID=your_twitch_client_id_here     # Twitch application client ID from dev.twitch.tv
TWITCH_EVENTSUB_SECRET_KEY=your_twitch_eventsub_secret_here  # Secret for verifying Twitch EventSub webhooks - CHANGE THIS!
TWITCH_EVENTSUB_WEBHOOK_URL=https://your-webhook-url.com/eventsub  # Public URL where Twitch sends EventSub notifications

# racetime.gg Integration
RACETIME_HOSTNAME=racetime.gg                       # racetime.gg hostname (don't change unless using custom instance)
RACETIME_BASE_URL=https://${RACETIME_HOSTNAME}      # racetime.gg API base URL
RACETIME_WSS_URL=wss://${RACETIME_HOSTNAME}         # racetime.gg WebSocket URL for race room connections
RACETIME_GAME_CATEGORY_SLUG_Z3=alttp                # Game category slug for ALttP on racetime.gg
RACETIME_BOT_CLIENT_ID=your_racetime_bot_client_id_here      # OAuth client ID for racetime.gg bot
RACETIME_BOT_CLIENT_SECRET=your_racetime_bot_client_secret_here  # OAuth client secret for racetime.gg bot

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here             # Secret key for signing JWT tokens - CHANGE THIS!
JWT_HEADER_COOKIE_NAME=helpa-jwthp                  # Name of cookie storing JWT header/payload
JWT_FOOTER_COOKIE_NAME=helpa-jwts                   # Name of cookie storing JWT signature

# Client Configuration
CLIENT_POST_AUTH_REDIRECT_URL=https://your-domain.com  # URL to redirect users after successful authentication